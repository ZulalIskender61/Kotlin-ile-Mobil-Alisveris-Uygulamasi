<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/kullaniciProfil">

    <TextView
        android:id="@+id/recycler_tumSiparislerimTarih"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Tarih" />
    <TextView
        android:id="@+id/recycler_tumSiparislerimToplam"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Toplam" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/recycler_tumSiparislerimKargoBilgisi"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Kargo Bilgisi" />

        <Button
            android:id="@+id/recycler_btnTumSiparislerimDetaylar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="Detaylar"
            android:backgroundTint="@color/black" />

    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/recycler_sepet_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginStart="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_wallpaper_24" />

    <TextView
        android:id="@+id/recycler_sepet_kitabinAdi"
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Kitabın Adı"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/recycler_sepet_imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/recycler_sepet_kitabinFiyati"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="10dp"
        android:text="Kitabın Fiyati"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/recycler_sepet_imageView"
        app:layout_constraintTop_toBottomOf="@+id/recycler_sepet_kitabinAdi" />

    <ImageView
        android:id="@+id/recycler_sepet_trash"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="200dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/recycler_sepet_imageView"
        app:srcCompat="@drawable/ic_baseline_restore_from_trash_24" />


</androidx.constraintlayout.widget.ConstraintLayout>